        months_uk = {
            "January": "—Å—ñ—á–µ–Ω—å", "February": "–ª—é—Ç–∏–π", "March": "–±–µ—Ä–µ–∑–µ–Ω—å",
            "April": "–∫–≤—ñ—Ç–µ–Ω—å", "May": "—Ç—Ä–∞–≤–µ–Ω—å", "June": "—á–µ—Ä–≤–µ–Ω—å",
