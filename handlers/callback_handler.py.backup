async def handle_apply_filters(query, context):
    """–û–±—Ä–æ–±–ª—è—î –∑–∞—Å—Ç–æ—Å—É–≤–∞–Ω–Ω—è —Ñ—ñ–ª—å—Ç—Ä—ñ–≤ —Ç—Ä–∞–Ω–∑–∞–∫—Ü—ñ–π"""
    try:
        # –û—Ç—Ä–∏–º—É—î–º–æ —Ñ—ñ–ª—å—Ç—Ä–∏ –∑ –∫–æ–Ω—Ç–µ–∫—Å—Ç—É
        filters = context.user_data.get('transaction_filters', {})
        
        # –õ–æ–≥—ñ–∫–∞ –∑–∞—Å—Ç–æ—Å—É–≤–∞–Ω–Ω—è —Ñ—ñ–ª—å—Ç—Ä—ñ–≤
        # –ù–∞–ø—Ä–∏–∫–ª–∞–¥, —è–∫—â–æ —Ñ—ñ–ª—å—Ç—Ä–∏ –º—ñ—Å—Ç—è—Ç—å –∫–∞—Ç–µ–≥–æ—Ä—ñ—é, –ø–æ–∫–∞–∑—É—î–º–æ —Ç—ñ–ª—å–∫–∏ —Ç—Ä–∞–Ω–∑–∞–∫—Ü—ñ—ó –∑ —Ü—ñ—î—ó –∫–∞—Ç–µ–≥–æ—Ä—ñ—ó
        user_id = query.from_user.id
        transactions = get_user_transactions(user_id)
        
        if filters.get('category'):
            transactions = [t for t in transactions if t.category_id == filters['category']]
        if filters.get('type'):
            transactions = [t for t in transactions if t.transaction_type == filters['type']]
        if filters.get('period'):
            now = datetime.now()
            if filters['period'] == 'month':
                start_date = now.replace(day=1)
                end_date = now + timedelta(days=1)
            elif filters['period'] == 'week':
                start_date = now - timedelta(days=now.weekday())
                end_date = start_date + timedelta(days=7)
            else:
                start_date = now - timedelta(days=30)
                end_date = now
            
            transactions = [t for t in transactions if start_date <= t.transaction_date < end_date]
        
        # –ü–æ–∫–∞–∑—É—î–º–æ –≤—ñ–¥—Ñ—ñ–ª—å—Ç—Ä–æ–≤–∞–Ω—ñ —Ç—Ä–∞–Ω–∑–∞–∫—Ü—ñ—ó
        if transactions:
            await query.message.reply_text("üóÇÔ∏è –í—ñ–¥—Ñ—ñ–ª—å—Ç—Ä–æ–≤–∞–Ω—ñ —Ç—Ä–∞–Ω–∑–∞–∫—Ü—ñ—ó:")
            for transaction in transactions:
                await query.message.reply_text(
                    f"üìÖ {transaction.transaction_date.strftime('%d.%m.%Y %H:%M')}\n"
                    f"üí∞ {transaction.amount} ‚Ç¥\n"
                    f"üìÇ {transaction.category_name}\n"
                    f"üìù {transaction.description}\n"
                    "-------------------"
                )
        else:
            await query.message.reply_text("üîç –ù–µ–º–∞—î —Ç—Ä–∞–Ω–∑–∞–∫—Ü—ñ–π, —â–æ –≤—ñ–¥–ø–æ–≤—ñ–¥–∞—é—Ç—å –æ–±—Ä–∞–Ω–∏–º —Ñ—ñ–ª—å—Ç—Ä–∞–º.")
    
    except Exception as e:
        logger.error(f"Error applying filters: {str(e)}")
        await query.message.reply_text("–í–∏–Ω–∏–∫–ª–∞ –ø–æ–º–∏–ª–∫–∞ –ø—Ä–∏ –∑–∞—Å—Ç–æ—Å—É–≤–∞–Ω–Ω—ñ —Ñ—ñ–ª—å—Ç—Ä—ñ–≤.")

